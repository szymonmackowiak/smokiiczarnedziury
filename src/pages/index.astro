---
import Layout from "../components/layout.astro";
import PostListing from "../components/post/post-list.astro";
import Slogan from "../components/slogan.astro";
import { posts } from "../helpers";

const filteredPosts = posts.filter((post) => post.data.hideOnHomePage !== true && post.slug.startsWith("pl/"));
---

<Layout title="Smoki i czarne dziury">
  <Slogan />
  <PostListing posts={filteredPosts} />
</Layout>
