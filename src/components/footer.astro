---
import ContactRow from "./contact-row.astro";
import { FOOTER_CONTENT } from "../config";
---

<footer class="bg-zinc-800/40 w-full flex flex-col md:flex-row items-center justify-between text-slate-400 py-6 px-8 gap-2 md:gap-0">
  <span class="text-sm">
    © <span id="current-year"></span> {FOOTER_CONTENT}
  </span>

  <div class="flex flex-wrap gap-4 text-sm">
    <a href="/pl/posts/polityka-prywatnosci" class="hover:underline">Polityka prywatności</a>
    <a href="/pl/posts/polityka-ai" class="hover:underline">Polityka AI</a>
  </div>

  <ContactRow />
</footer>

<script>
  const currentYear = new Date().getFullYear();
  document.getElementById("current-year")!.textContent = currentYear.toString();
</script>