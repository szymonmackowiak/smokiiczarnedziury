---
import { SLOGAN } from "../config";
import { SUBSLOGAN } from "../config";

type Props = {
  class?: string;
  atBottom?: boolean;
};

const { atBottom } = Astro.props;
---

<footer class:list={[atBottom ? "bg-gradient-to-t" : "bg-gradient-to-b", "from-zinc-800/60"]}>
  <div class="flex flex-col items-center justify-center max-w-screen-md h-40 md:h-60 mx-auto px-4 sm:px-6 text-center">
    <p
      class="text-lg md:text-4xl leading-6 md:leading-[60px] bg-clip-text text-transparent bg-gradient-to-r from-slate-100 to-slate-400 font-logo font-black"
    >
      {SLOGAN}
    </p>
    <p
      class="mt-2 text-sm md:text-2xl text-slate-400"
    >
      {SUBSLOGAN}
    </p>
  </div>
</footer>
